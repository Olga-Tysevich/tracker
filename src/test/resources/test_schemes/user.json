{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "surname": {
      "type": "string",
      "minLength": 1
    },
    "email": {
      "type": "string",
      "pattern": "^[a-zA-Z\\d._%+-]+@[a-zA-Z\\d.-]+\\.[a-zA-Z]{2,}$"
    },
    "roles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "id",
    "name",
    "surname",
    "email",
    "roles"
  ],
  "additionalProperties": false
}